{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center my-3">
            <div class="col-12 col-md-6">
                <div class="card">
                    {{ form_start(quizPreStartForm) }}
                    <div class="card-header">{{ 'quiz-time'|trans }}</div>
                    <div class="card-body vstack gap-3">
                        {{ form_row(quizPreStartForm.questionCategoryEnum) }}
                        {{ form_row(quizPreStartForm.questionLevelEnum) }}
                        {{ form_row(quizPreStartForm.isTimed) }}
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-lg btn-primary w-100">{{ 'start-now'|trans }}</button>
                    </div>
                    {{ form_end(quizPreStartForm) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
