{% extends 'base.html.twig' %}

{% block title %}{{ 'quiz-history'|trans|title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center my-3">

            <div class="col-12 col-md-6">

                <div class="vstack gap-3">
                    <div class="fs-4">{{ 'quiz-history'|trans|title }}</div>
                    <hr class="my-2"/>
                    {% for quizParticipation in app.user.quizParticipations %}
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-bold text-primary">{{ quizParticipation.quiz.title|title }}</div>
                                        <div>{{ quizParticipation|calculate_quiz_percentage ~ '%' }}</div>
                                    </div>
                                    <div class="text-center small">
                                        {% if quizParticipation.completedAt is empty %}
                                            <div>{{ 'in-progress'|trans }}</div>
                                        {% else %}
                                            {{ quizParticipation.completedAt.diffForHumans }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <a class="stretched-link"
                               href="{{ path('quiz_result',{id: quizParticipation.id }) }}"></a>
                        </div>
                    {% else %}
                        <div class="text-center">
                            <h5>{{ 'nothing-found'|trans }}</h5>
                            <div class="list-group-item text-center text-muted">{{ 'no-quiz-history-found'|trans }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
