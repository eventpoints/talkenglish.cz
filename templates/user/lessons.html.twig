{% extends 'base.html.twig' %}

{% block title %}{{ 'lesson-history'|trans|title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center my-3">

            <div class="col-12 col-md-6">

                <div class="vstack gap-3">
                    <div class="fs-4">{{ 'lesson-history'|trans|title }}</div>
                    <hr class="my-2"/>
                    {% for lessonParticipation in app.user.lessonParticipations %}
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-bold text-primary">{{ lessonParticipation.lesson.title|title }}</div>
                                        <div>{{ lessonParticipation.lesson.price|format_currency(lessonParticipation.lesson.currency) }}</div>
                                    </div>
                                    <div class="text-center small">
                                        {{ lessonParticipation.createdAt.diffForHumans }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center">
                            <h5>{{ 'nothing-found'|trans }}</h5>
                            <div class="list-group-item text-center text-muted">{{ 'no-lessons-found'|trans }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
