{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center g-3 mt-3">
            <div class="col-md-6">
                <div class="p-5 text-center bg-body-tertiary rounded-3">
                    <img class="mb-4 object-fit-cover" width="120" height="120" src="{{ asset('images/logo.webp') }}"/>
                    <h1 class="text-body-emphasis">Talk English</h1>
                    <p class="col-lg-8 mx-auto fs-5 text-muted">
                        Join our vibrant community of international students and learn English with native speakers!
                        Enhance your conversational skills and enjoy access to a variety of free quizzes designed to
                        make learning fun and engaging.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    {{ form_start(registrationForm) }}
                    <div class="card-header">
                        <div class="fs-3 fw-bold text-capitalize">{{ 'register'|trans|title }}</div>

                    </div>
                    <div class="card-body vstack gap-3">
                        {{ form_errors(registrationForm) }}

                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_row(registrationForm.email) }}
                        <div class="input-group" {{ stimulus_controller('password-visibility') }}>
                            {{ form_row(registrationForm.plainPassword, {
                                attr: {
                                    'data-password-visibility-target': 'input'
                                }
                            }) }}
                            <button data-action="password-visibility#toggle" class="btn btn-secondary" type="button"
                                    id="button-addon2">
                                <span data-password-visibility-target="icon" class="bi bi-eye"></span>
                                <span data-password-visibility-target="icon" class="hidden bi bi-eye-slash"></span>
                            </button>
                        </div>

                    </div>

                    <div class="card-footer vstack gap-2 text-center">
                        <button type="submit" class="btn btn-lg btn-primary">{{ 'continue'|trans }}</button>
                        <a href="{{ path('app_login') }}" type="button"
                           class="btn btn-lg btn-light">{{ 'login'|trans }}</a>
                    </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
