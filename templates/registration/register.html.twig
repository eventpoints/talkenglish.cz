{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">

            {{ form_errors(registrationForm) }}

            <div class="col-md-4">
                <div class="card my-3">
                    {{ form_start(registrationForm) }}
                    <div class="card-header">
                        <div class="fs-3 fw-bold text-capitalize">{{ 'register'|trans|title }}</div>

                    </div>
                    <div class="card-body vstack gap-3">
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_row(registrationForm.email) }}
                        <div class="input-group" {{ stimulus_controller('password-visibility') }}>
                            {{ form_row(registrationForm.plainPassword, {
                                attr: {
                                    'data-password-visibility-target': 'input'
                                }
                            }) }}
                            <button data-action="password-visibility#toggle" class="btn btn-secondary" type="button"
                                    id="button-addon2">
                                <span data-password-visibility-target="icon" class="bi bi-eye"></span>
                                <span data-password-visibility-target="icon" class="hidden bi bi-eye-slash"></span>
                            </button>
                        </div>

                    </div>

                    <div class="card-footer vstack gap-2 text-center">
                        <button type="submit" class="btn btn-lg btn-primary">{{ 'continue'|trans }}</button>
                        <a href="{{ path('app_login') }}" type="button" class="btn btn-lg btn-light">{{ 'login'|trans }}</a>
                    </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
